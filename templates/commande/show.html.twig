{% extends 'base.html.twig' %}

{% block title %}Commande #{{ commande.id }} - BookCollection{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-box-seam"></i> Commande #{{ commande.id }}</h2>
    {% if commande.statut == 'en_attente' %}
        <span class="badge bg-warning text-dark fs-5">
            <i class="bi bi-clock"></i> En attente
        </span>
    {% elseif commande.statut == 'validee' %}
        <span class="badge bg-info fs-5">
            <i class="bi bi-check-circle"></i> Validée
        </span>
    {% elseif commande.statut == 'livree' %}
        <span class="badge bg-success fs-5">
            <i class="bi bi-box-seam"></i> Livrée
        </span>
    {% elseif commande.statut == 'annulee' %}
        <span class="badge bg-danger fs-5">
            <i class="bi bi-x-circle"></i> Annulée
        </span>
    {% endif %}
</div>

<div class="row">
    {# Informations de la commande #}
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informations</h5>
            </div>
            <div class="card-body">
                <p><strong>Date :</strong><br>{{ commande.dateCommande|date('d/m/Y à H:i') }}</p>
                <p><strong>Client :</strong><br>{{ commande.user.prenom }} {{ commande.user.nom }}</p>
                <p><strong>Email :</strong><br>{{ commande.user.email }}</p>
                {% if commande.user.telephone %}
                    <p><strong>Téléphone :</strong><br>{{ commande.user.telephone }}</p>
                {% endif %}
                {% if commande.user.adresse %}
                    <p><strong>Adresse de livraison :</strong><br>{{ commande.user.adresse }}</p>
                {% endif %}
            </div>
        </div>

        {# Suivi de commande #}
        <div class="card mt-3">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-truck"></i> Suivi</h5>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="mb-3">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-check-circle-fill text-success fs-4 me-2"></i>
                            <div>
                                <strong>Commande passée</strong><br>
                                <small class="text-muted">{{ commande.dateCommande|date('d/m/Y H:i') }}</small>
                            </div>
                        </div>
                    </div>
                    
                    {% if commande.statut in ['validee', 'livree'] %}
                        <div class="mb-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-check-circle-fill text-success fs-4 me-2"></i>
                                <div>
                                    <strong>Commande validée</strong>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="mb-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-circle text-muted fs-4 me-2"></i>
                                <div>
                                    <strong class="text-muted">Validation en attente</strong>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    
                    {% if commande.statut == 'livree' %}
                        <div class="mb-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-check-circle-fill text-success fs-4 me-2"></i>
                                <div>
                                    <strong>Livraison effectuée</strong>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="mb-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-circle text-muted fs-4 me-2"></i>
                                <div>
                                    <strong class="text-muted">En attente de livraison</strong>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Détails de la commande #}
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-list-ul"></i> Détails de la commande</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Livre</th>
                                <th>Prix unitaire</th>
                                <th>Quantité</th>
                                <th>Sous-total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ligne in commande.lignesCommande %}
                                <tr>
                                    <td>
                                        {% if ligne.livre.imageCouverture %}
                                            <img src="{{ asset('uploads/livres/' ~ ligne.livre.imageCouverture) }}" 
                                                 alt="{{ ligne.livre.titre }}"
                                                 style="width: 50px; height: 70px; object-fit: cover;"
                                                 class="rounded">
                                        {% else %}
                                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded" style="width: 50px; height: 70px;">
                                                <i class="bi bi-book"></i>
                                            </div>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <strong>{{ ligne.livre.titre }}</strong><br>
                                        <small class="text-muted">{{ ligne.livre.auteur }}</small>
                                    </td>
                                    <td>{{ ligne.prixUnitaire }} TND</td>
                                    <td>{{ ligne.quantite }}</td>
                                    <td class="fw-bold">{{ ligne.sousTotal|number_format(2, '.', '') }} TND</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="4" class="text-end"><strong>TOTAL :</strong></td>
                                <td class="fs-4 text-primary fw-bold">{{ commande.montantTotal }} TND</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        {# Actions #}
        <div class="mt-4">
            <a href="{{ path('app_commande_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour à mes commandes
            </a>
            
            {% if commande.statut == 'en_attente' %}
                <div class="alert alert-info mt-3">
                    <i class="bi bi-info-circle"></i> 
                    Votre commande est en attente de validation. Vous recevrez un email de confirmation dès qu'elle sera traitée.
                </div>
            {% elseif commande.statut == 'validee' %}
                <div class="alert alert-success mt-3">
                    <i class="bi bi-check-circle"></i> 
                    Votre commande a été validée ! Elle sera livrée sous 3 à 5 jours ouvrés.
                </div>
            {% elseif commande.statut == 'livree' %}
                <div class="alert alert-success mt-3">
                    <i class="bi bi-box-seam"></i> 
                    Votre commande a été livrée ! Merci pour votre achat.
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
