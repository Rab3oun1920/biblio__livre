{% extends 'base.html.twig' %}

{% block title %}Mon Panier - BookCollection{% endblock %}

{% block body %}
    <div class="container py-5">
        <h1 class="mb-4"><i class="bi bi-cart3"></i> Mon Panier</h1>

        {% if panier is empty %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Votre panier est vide.
                <a href="{{ path('app_catalogue') }}" class="alert-link">Découvrir le catalogue</a>
            </div>
        {% else %}
            <div class="row">
                <div class="col-lg-8">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Articles dans le panier</h5>
                        </div>
                        <div class="card-body">
                            {% for item in panier %}
                                <div class="row align-items-center mb-4 border-bottom pb-4">
                                    <div class="col-md-2">
                                        {% if item.livre.imageCouverture %}
                                            <img src="{{ asset('uploads/livres/' ~ item.livre.imageCouverture) }}"
                                                 class="img-fluid rounded"
                                                 alt="{{ item.livre.titre }}">
                                        {% else %}
                                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="width: 80px; height: 100px;">
                                                <i class="bi bi-book text-white fs-1"></i>
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="col-md-5">
                                        <h5 class="mb-1">{{ item.livre.titre }}</h5>
                                        <p class="text-muted mb-1">
                                            <i class="bi bi-person"></i>
                                            {{ item.livre.auteur.prenom }} {{ item.livre.auteur.nom }}
                                        </p>
                                        <span class="badge bg-info">{{ item.livre.genre }}</span>
                                    </div>
                                    <div class="col-md-2">
                                        <input type="number"
                                               class="form-control form-control-sm"
                                               value="{{ item.quantite }}"
                                               min="1"
                                               max="{{ item.livre.stock }}"
                                               data-id="{{ item.livre.id }}">
                                    </div>
                                    <div class="col-md-2">
                                        <h5 class="mb-0">{{ item.sousTotal|number_format(2, ',', ' ') }} TND</h5>
                                        <small class="text-muted">{{ item.livre.prix|number_format(2, ',', ' ') }} TND x {{ item.quantite }}</small>
                                    </div>
                                    <div class="col-md-1 text-end">
                                        <a href="{{ path('app_panier_retirer', {'id': item.livre.id}) }}"
                                           class="btn btn-outline-danger btn-sm"
                                           onclick="return confirm('Retirer ce livre du panier ?')">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}

                            <div class="text-end">
                                <a href="{{ path('app_panier_vider') }}"
                                   class="btn btn-outline-danger"
                                   onclick="return confirm('Vider tout le panier ?')">
                                    <i class="bi bi-trash"></i> Vider le panier
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="bi bi-receipt"></i> Récapitulatif</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Total articles</span>
                                <span>{{ total|number_format(2, ',', ' ') }} TND</span>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <span>Livraison</span>
                                <span class="text-success">Gratuite</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-4">
                                <strong>Total à payer</strong>
                                <strong class="fs-4 text-primary">{{ total|number_format(2, ',', ' ') }} TND</strong>
                            </div>

                            <div class="d-grid gap-2">
                                <a href="{{ path('app_catalogue') }}" class="btn btn-outline-primary">
                                    <i class="bi bi-arrow-left"></i> Continuer mes achats
                                </a>
                                <a href="{{ path('app_commande_valider') }}" class="btn btn-success btn-lg">
                                    <i class="bi bi-check-circle"></i> Valider la commande
                                </a>
                            </div>

                            <div class="alert alert-info mt-4">
                                <i class="bi bi-shield-check"></i>
                                <small>Paiement sécurisé • Livraison gratuite • Retour sous 30 jours</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Modification de la quantité
            document.querySelectorAll('input[type="number"]').forEach(input => {
                input.addEventListener('change', function() {
                    const livreId = this.getAttribute('data-id');
                    const quantite = this.value;

                    // Rediriger vers une route pour mettre à jour la quantité
                    window.location.href = `/panier/modifier/${livreId}/${quantite}`;
                });
            });
        });
    </script>
{% endblock %}
