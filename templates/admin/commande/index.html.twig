{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des commandes{% endblock %}

{% block page_title %}Gestion des commandes{% endblock %}

{% block toolbar %}
    <div class="btn-group">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown">
            <i class="bi bi-filter"></i> Filtrer par statut
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="{{ path('admin_commande_index') }}">Toutes</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="{{ path('admin_commande_index') }}?statut=en_attente">
                    <i class="bi bi-clock text-warning"></i> En attente
                </a></li>
            <li><a class="dropdown-item" href="{{ path('admin_commande_index') }}?statut=validee">
                    <i class="bi bi-check-circle text-success"></i> Validées
                </a></li>
            <li><a class="dropdown-item" href="{{ path('admin_commande_index') }}?statut=rejetee">
                    <i class="bi bi-x-circle text-danger"></i> Rejetées
                </a></li>
        </ul>
    </div>
{% endblock %}

{% block body %}
    {# Statistiques rapides #}
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-warning shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase mb-1" style="font-size: 0.75rem;">En attente</h6>
                            <h2 class="mb-0 fw-bold">{{ commandesPending|length }}</h2>
                        </div>
                        <div class="fs-1 text-warning opacity-75">
                            <i class="bi bi-clock-history"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-success shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase mb-1" style="font-size: 0.75rem;">Validées</h6>
                            <h2 class="mb-0 fw-bold">{{ commandesValidated|length }}</h2>
                        </div>
                        <div class="fs-1 text-success opacity-75">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-danger shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase mb-1" style="font-size: 0.75rem;">Rejetées</h6>
                            <h2 class="mb-0 fw-bold">{{ commandesRejected|length }}</h2>
                        </div>
                        <div class="fs-1 text-danger opacity-75">
                            <i class="bi bi-x-circle-fill"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Onglets de navigation #}
    <ul class="nav nav-pills mb-3" id="commandeTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="pending-tab" data-bs-toggle="tab"
                    data-bs-target="#pending" type="button" role="tab">
                <i class="bi bi-clock"></i> En attente
                {% if commandesPending|length > 0 %}
                    <span class="badge bg-warning text-dark ms-1">{{ commandesPending|length }}</span>
                {% endif %}
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="validated-tab" data-bs-toggle="tab"
                    data-bs-target="#validated" type="button" role="tab">
                <i class="bi bi-check-circle"></i> Validées
                {% if commandesValidated|length > 0 %}
                    <span class="badge bg-success ms-1">{{ commandesValidated|length }}</span>
                {% endif %}
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="rejected-tab" data-bs-toggle="tab"
                    data-bs-target="#rejected" type="button" role="tab">
                <i class="bi bi-x-circle"></i> Rejetées
                {% if commandesRejected|length > 0 %}
                    <span class="badge bg-danger ms-1">{{ commandesRejected|length }}</span>
                {% endif %}
            </button>
        </li>
    </ul>

    {# Contenu des onglets #}
    <div class="tab-content" id="commandeTabsContent">
        {# ========== ONGLET EN ATTENTE ========== #}
        <div class="tab-pane fade show active" id="pending" role="tabpanel">
            <div class="card">
                <div class="card-body">
                    {% if commandesPending is empty %}
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Aucune commande en attente.
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Client</th>
                                    <th>Date</th>
                                    <th>Montant</th>
                                    <th>Articles</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for commande in commandesPending %}
                                    <tr>
                                        <td><strong>#{{ commande.id }}</strong></td>
                                        <td>
                                            {{ commande.user.prenom }} {{ commande.user.nom }}
                                            <br><small class="text-muted">{{ commande.user.email }}</small>
                                        </td>
                                        <td>
                                            <small>{{ commande.dateCommande|date('d/m/Y H:i') }}</small>
                                        </td>
                                        <td>
                                            <strong class="text-success">{{ commande.montantTotal|number_format(2, ',', ' ') }} TND</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">{{ commande.ligneCommandes|length }} livre(s)</span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                {# Bouton Valider #}
                                                <button type="button" class="btn btn-success" title="Valider"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#modalValider{{ commande.id }}">
                                                    <i class="bi bi-check-lg"></i>
                                                </button>
                                                {# Bouton Rejeter #}
                                                <button type="button" class="btn btn-danger" title="Rejeter"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#modalRejeter{{ commande.id }}">
                                                    <i class="bi bi-x-lg"></i>
                                                </button>
                                            </div>

                                            {# Modal Valider #}
                                            <div class="modal fade" id="modalValider{{ commande.id }}" tabindex="-1">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header bg-success text-white">
                                                            <h5 class="modal-title">
                                                                <i class="bi bi-check-circle"></i> Valider la commande #{{ commande.id }}
                                                            </h5>
                                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <form method="post" action="{{ path('admin_commande_valider', {id: commande.id}) }}">
                                                            <div class="modal-body">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('valider' ~ commande.id) }}">

                                                                {# Résumé de la commande #}
                                                                <div class="alert alert-light border">
                                                                    <div class="row">
                                                                        <div class="col-6">
                                                                            <small class="text-muted">Client</small><br>
                                                                            <strong>{{ commande.user.prenom }} {{ commande.user.nom }}</strong>
                                                                        </div>
                                                                        <div class="col-6 text-end">
                                                                            <small class="text-muted">Montant total</small><br>
                                                                            <strong class="text-success">{{ commande.montantTotal|number_format(2, ',', ' ') }} TND</strong>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <div class="mb-3">
                                                                    <label class="form-label">Note pour le client (optionnel)</label>
                                                                    <textarea name="note" class="form-control" rows="3"
                                                                              placeholder="Ex: Votre commande sera expédiée sous 48h"></textarea>
                                                                    <small class="text-muted">
                                                                        <i class="bi bi-info-circle"></i> Cette note sera visible par le client
                                                                    </small>
                                                                </div>

                                                                <div class="alert alert-info mb-0">
                                                                    <i class="bi bi-info-circle"></i>
                                                                    Le client sera notifié de la validation de sa commande.
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                                    Annuler
                                                                </button>
                                                                <button type="submit" class="btn btn-success">
                                                                    <i class="bi bi-check-lg"></i> Confirmer
                                                                </button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>

                                            {# Modal Rejeter #}
                                            <div class="modal fade" id="modalRejeter{{ commande.id }}" tabindex="-1">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header bg-danger text-white">
                                                            <h5 class="modal-title">
                                                                <i class="bi bi-x-circle"></i> Rejeter la commande #{{ commande.id }}
                                                            </h5>
                                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <form method="post" action="{{ path('admin_commande_rejeter', {id: commande.id}) }}">
                                                            <div class="modal-body">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('rejeter' ~ commande.id) }}">

                                                                {# Résumé de la commande #}
                                                                <div class="alert alert-light border">
                                                                    <div class="row">
                                                                        <div class="col-6">
                                                                            <small class="text-muted">Client</small><br>
                                                                            <strong>{{ commande.user.prenom }} {{ commande.user.nom }}</strong>
                                                                        </div>
                                                                        <div class="col-6 text-end">
                                                                            <small class="text-muted">Montant total</small><br>
                                                                            <strong>{{ commande.montantTotal|number_format(2, ',', ' ') }} TND</strong>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <div class="mb-3">
                                                                    <label class="form-label">
                                                                        Raison du rejet <span class="text-danger">*</span>
                                                                    </label>
                                                                    <textarea name="note" class="form-control" rows="3"
                                                                              placeholder="Ex: Stock insuffisant pour certains articles" required></textarea>
                                                                    <small class="text-muted">
                                                                        <i class="bi bi-exclamation-triangle"></i> Veuillez indiquer la raison du rejet
                                                                    </small>
                                                                </div>

                                                                <div class="alert alert-warning mb-0">
                                                                    <i class="bi bi-exclamation-triangle"></i>
                                                                    Le client sera informé du rejet et de la raison.
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                                    Annuler
                                                                </button>
                                                                <button type="submit" class="btn btn-danger">
                                                                    <i class="bi bi-x-lg"></i> Confirmer
                                                                </button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# ========== ONGLET VALIDÉES ========== #}
        <div class="tab-pane fade" id="validated" role="tabpanel">
            <div class="card">
                <div class="card-body">
                    {% if commandesValidated is empty %}
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Aucune commande validée.
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Client</th>
                                    <th>Date commande</th>
                                    <th>Validée le</th>
                                    <th>Par</th>
                                    <th>Montant</th>
                                    <th>Note</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for commande in commandesValidated %}
                                    <tr>
                                        <td><strong>#{{ commande.id }}</strong></td>
                                        <td>
                                            {{ commande.user.prenom }} {{ commande.user.nom }}
                                            <br><small class="text-muted">{{ commande.user.email }}</small>
                                        </td>
                                        <td><small>{{ commande.dateCommande|date('d/m/Y H:i') }}</small></td>
                                        <td>
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> {{ commande.validatedAt|date('d/m/Y H:i') }}
                                            </span>
                                        </td>
                                        <td>
                                            {% if commande.validatedBy %}
                                                <small>{{ commande.validatedBy.prenom }} {{ commande.validatedBy.nom }}</small>
                                            {% else %}
                                                <small class="text-muted">-</small>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <strong>{{ commande.montantTotal|number_format(2, ',', ' ') }} TND</strong>
                                        </td>
                                        <td>
                                            {% if commande.adminNote %}
                                                <small class="text-muted">{{ commande.adminNote|length > 50 ? commande.adminNote|slice(0, 50) ~ '...' : commande.adminNote }}</small>
                                            {% else %}
                                                <small class="text-muted">-</small>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# ========== ONGLET REJETÉES ========== #}
        <div class="tab-pane fade" id="rejected" role="tabpanel">
            <div class="card">
                <div class="card-body">
                    {% if commandesRejected is empty %}
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Aucune commande rejetée.
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Client</th>
                                    <th>Date commande</th>
                                    <th>Rejetée le</th>
                                    <th>Montant</th>
                                    <th>Raison</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for commande in commandesRejected %}
                                    <tr>
                                        <td><strong>#{{ commande.id }}</strong></td>
                                        <td>
                                            {{ commande.user.prenom }} {{ commande.user.nom }}
                                            <br><small class="text-muted">{{ commande.user.email }}</small>
                                        </td>
                                        <td><small>{{ commande.dateCommande|date('d/m/Y H:i') }}</small></td>
                                        <td>
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle"></i> {{ commande.rejectedAt|date('d/m/Y H:i') }}
                                            </span>
                                        </td>
                                        <td>
                                            <strong>{{ commande.montantTotal|number_format(2, ',', ' ') }} TND</strong>
                                        </td>
                                        <td>
                                            {% if commande.adminNote %}
                                                <small class="text-danger">{{ commande.adminNote|length > 50 ? commande.adminNote|slice(0, 50) ~ '...' : commande.adminNote }}</small>
                                            {% else %}
                                                <small class="text-muted">Aucune raison spécifiée</small>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
