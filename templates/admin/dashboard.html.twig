{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard - Admin{% endblock %}

{% block page_title %}Tableau de bord{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card stat-card users">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Utilisateurs</h6>
                        <h2 class="mb-0">{{ stats.totalUsers }}</h2>
                    </div>
                    <div class="text-primary" style="font-size: 3rem;">
                        <i class="bi bi-people-fill"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card stat-card books">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Livres</h6>
                        <h2 class="mb-0">{{ stats.totalLivres }}</h2>
                    </div>
                    <div class="text-success" style="font-size: 3rem;">
                        <i class="bi bi-book-fill"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card stat-card authors">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Auteurs</h6>
                        <h2 class="mb-0">{{ stats.totalAuteurs }}</h2>
                    </div>
                    <div class="text-warning" style="font-size: 3rem;">
                        <i class="bi bi-person-fill"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Derniers utilisateurs</h5>
            </div>
            <div class="card-body">
                {% if stats.recentUsers is not empty %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Email</th>
                                    <th>Rôle</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in stats.recentUsers %}
                                    <tr>
                                        <td>{{ user.prenom }} {{ user.nom }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>
                                            {% if 'ROLE_ADMIN' in user.roles %}
                                                <span class="badge bg-danger">Admin</span>
                                            {% else %}
                                                <span class="badge bg-secondary">User</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted">Aucun utilisateur pour le moment.</p>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-book"></i> Derniers livres ajoutés</h5>
            </div>
            <div class="card-body">
                {% if stats.recentLivres is not empty %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Auteur</th>
                                    <th>Année</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for livre in stats.recentLivres %}
                                    <tr>
                                        <td>{{ livre.titre }}</td>
                                        <td>{{ livre.auteur }}</td>
                                        <td>{{ livre.anneePublication ?? '-' }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted">Aucun livre pour le moment.</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
