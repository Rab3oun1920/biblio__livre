<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin - Book Collection{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .sidebar {
            min-height: 100vh;
            background: linear-gradient(180deg, #1e3c72 0%, #2a5298 100%);
        }
        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            padding: 0.8rem 1rem;
            margin: 0.2rem 0;
            border-radius: 0.3rem;
            transition: all 0.3s;
        }
        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
        }
        .sidebar .nav-link i {
            margin-right: 0.5rem;
        }
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        .stat-card {
            border-left: 4px solid;
        }
        .stat-card.users {
            border-left-color: #007bff;
        }
        .stat-card.books {
            border-left-color: #28a745;
        }
        .stat-card.authors {
            border-left-color: #ffc107;
        }
        .stat-card.orders {
            border-left-color: #17a2b8;
        }
    </style>
    {% block stylesheets %}{% endblock %}
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-md-block sidebar p-3">
            <div class="text-center mb-4">
                <h4 class="text-white"><i class="bi bi-book"></i> Book Collection</h4>
                <small class="text-white-50">Panneau d'administration</small>
            </div>

            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') == 'admin_dashboard' %}active{% endif %}"
                       href="{{ path('admin_dashboard') }}">
                        <i class="bi bi-speedometer2"></i> Tableau de bord
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if 'admin_livre' in app.request.get('_route') %}active{% endif %}"
                       href="{{ path('admin_livre_index') }}">
                        <i class="bi bi-book-fill"></i> Livres
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if 'admin_auteur' in app.request.get('_route') %}active{% endif %}"
                       href="{{ path('admin_auteur_index') }}">
                        <i class="bi bi-person-fill"></i> Auteurs
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if 'admin_user' in app.request.get('_route') %}active{% endif %}"
                       href="{{ path('admin_user_index') }}">
                        <i class="bi bi-people-fill"></i> Utilisateurs
                    </a>
                </li>

                <!--  NOUVEAU : Gestion des r茅clamations -->
                <li class="nav-item">
                    <a class="nav-link {% if 'admin_reclamation' in app.request.get('_route') %}active{% endif %}"
                       href="#"
                       onclick="return handleReclamationClick();">
                        <i class="bi bi-chat-left-text"></i> R茅clamations
                        {% if stats is defined and stats.reclamationsEnAttente is defined and stats.reclamationsEnAttente > 0 %}
                            <span class="badge bg-danger float-end">{{ stats.reclamationsEnAttente }}</span>

                        {% endif %}
                    </a>
                </li>

                <!--  OPTIONNEL : Gestion des commandes (DSACTIV TEMPORAIREMENT) -->
                <li class="nav-item">
                    <a class="nav-link text-muted"
                       href="#"
                       onclick="alert('Interface commandes - Bient么t disponible'); return false;">
                        <i class="bi bi-cart-fill"></i> Commandes
                        <span class="badge bg-secondary float-end">Bient么t</span>
                    </a>
                </li>

                <!--  OPTIONNEL : Gestion des commentaires (DSACTIV TEMPORAIREMENT) -->
                <li class="nav-item">
                    <a class="nav-link text-muted"
                       href="#"
                       onclick="alert('Interface commentaires - Bient么t disponible'); return false;">
                        <i class="bi bi-star-fill"></i> Commentaires
                        <span class="badge bg-secondary float-end">Bient么t</span>
                    </a>
                </li>



                <li class="nav-item mt-4">
                    <a class="nav-link" href="{{ path('app_logout') }}">
                        <i class="bi bi-box-arrow-right"></i> D茅connexion
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main content -->
        <main class="col-md-10 ms-sm-auto px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">{% block page_title %}Dashboard{% endblock %}</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    {% block toolbar %}{% endblock %}
                </div>
            </div>

            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function handleReclamationClick() {
        // Essayer d'acc茅der  la route via JavaScript
        fetch('/admin/reclamation')
            .then(response => {
                if (response.ok) {
                    // La route existe, rediriger
                    window.location.href = '/admin/reclamation';
                    return false;
                } else {
                    // La route n'existe pas
                    alert('Interface r茅clamations - Bient么t disponible');
                    return false;
                }
            })
            .catch(error => {
                // Erreur r茅seau ou route inexistante
                alert('Interface r茅clamations - Bient么t disponible');
                return false;
            });

        return false;
    }
</script>
{% block javascripts %}{% endblock %}
</body>
</html>
