{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des livres{% endblock %}

{% block page_title %}Gestion des livres{% endblock %}

{% block toolbar %}
    <a href="{{ path('admin_livre_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nouveau livre
    </a>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            {% if livres is empty %}
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Aucun livre enregistré pour le moment.
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Couverture</th>
                            <th>Titre</th>
                            <th>Auteur</th>
                            <th>Prix</th>
                            <th>Stock</th>
                            <th>Dispo</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for livre in livres %}
                            <tr>
                                <td>{{ livre.id }}</td>
                                <td>
                                    {% if livre.imageCouverture %}
                                        <img src="{{ asset('uploads/livres/' ~ livre.imageCouverture) }}"
                                             alt="{{ livre.titre }}"
                                             class="img-thumbnail"
                                             style="width: 50px; height: 70px; object-fit: cover;">
                                    {% else %}
                                        <span class="badge bg-secondary">
                                        <i class="bi bi-image"></i>
                                    </span>
                                    {% endif %}
                                </td>
                                <td>
                                    <strong>{{ livre.titre }}</strong><br>
                                    <small class="text-muted">{{ livre.genre ?? 'Non spécifié' }}</small>
                                </td>
                                <td>{{ livre.auteur }}</td>
                                <td>
                                    {% if livre.prix %}
                                        <span class="badge bg-success">{{ livre.prix|number_format(2, ',', ' ') }} TND</span>
                                    {% else %}
                                        <span class="badge bg-secondary">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if livre.stock > 0 %}
                                        <span class="badge bg-primary">{{ livre.stock }}</span>
                                    {% else %}
                                        <span class="badge bg-danger">0</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if livre.estDisponible %}
                                        <span class="badge bg-success"><i class="bi bi-check-circle"></i></span>
                                    {% else %}
                                        <span class="badge bg-danger"><i class="bi bi-x-circle"></i></span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('admin_livre_show', {'id': livre.id}) }}"
                                           class="btn btn-info" title="Voir">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="{{ path('admin_livre_edit', {'id': livre.id}) }}"
                                           class="btn btn-warning" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-danger"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteModal{{ livre.id }}"
                                                title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>

                                    <!-- Modal de confirmation -->
                                    <div class="modal fade" id="deleteModal{{ livre.id }}" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Confirmer la suppression</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Êtes-vous sûr de vouloir supprimer le livre "{{ livre.titre }}" ?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                    <form method="post" action="{{ path('admin_livre_delete', {'id': livre.id}) }}" style="display: inline;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livre.id) }}">
                                                        <button type="submit" class="btn btn-danger">Supprimer</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
