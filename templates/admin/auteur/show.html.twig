{% extends 'admin/base.html.twig' %}

{% block title %}{{ auteur }}{% endblock %}

{% block page_title %}Détails de l'auteur{% endblock %}

{% block toolbar %}
    <a href="{{ path('admin_auteur_index') }}" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Retour à la liste
    </a>
    <a href="{{ path('admin_auteur_edit', {'id': auteur.id}) }}" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Modifier
    </a>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">{{ auteur }}</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th width="30%">ID</th>
                            <td>{{ auteur.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ auteur.nom }}</td>
                        </tr>
                        <tr>
                            <th>Prénom</th>
                            <td>{{ auteur.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Nationalité</th>
                            <td>{{ auteur.nationalite ?? '-' }}</td>
                        </tr>
                        <tr>
                            <th>Date de naissance</th>
                            <td>{{ auteur.dateNaissance ? auteur.dateNaissance|date('d/m/Y') : '-' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        {% if auteur.livres|length > 0 %}
            <div class="card mt-3">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Livres de cet auteur ({{ auteur.livres|length }})</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Genre</th>
                                    <th>Année</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for livre in auteur.livres %}
                                    <tr>
                                        <td>{{ livre.titre }}</td>
                                        <td>{{ livre.genre ?? '-' }}</td>
                                        <td>{{ livre.anneePublication ?? '-' }}</td>
                                        <td>
                                            <a href="{{ path('admin_livre_show', {'id': livre.id}) }}" 
                                               class="btn btn-sm btn-info">
                                                <i class="bi bi-eye"></i> Voir
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
