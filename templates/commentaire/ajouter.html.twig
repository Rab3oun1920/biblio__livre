{% extends 'base.html.twig' %}

{% block title %}Ajouter un commentaire - {{ livre.titre }}{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3><i class="bi bi-pencil"></i> Laisser un avis</h3>
            </div>
            <div class="card-body">
                {# Informations du livre #}
                <div class="row mb-4">
                    <div class="col-md-3">
                        {% if livre.imageCouverture %}
                            <img src="{{ asset('uploads/livres/' ~ livre.imageCouverture) }}" 
                                 alt="{{ livre.titre }}"
                                 class="img-fluid rounded">
                        {% else %}
                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded" style="height: 150px;">
                                <i class="bi bi-book fs-1"></i>
                            </div>
                        {% endif %}
                    </div>
                    <div class="col-md-9">
                        <h4>{{ livre.titre }}</h4>
                        <p class="text-muted">{{ livre.auteur.prenom }} {{ livre.auteur.nom }}</p>
                        {% if livre.genre %}
                            <span class="badge bg-info">{{ livre.genre }}</span>
                        {% endif %}
                    </div>
                </div>

                <hr>

                {# Formulaire de commentaire #}
                {{ form_start(form) }}
                
                <div class="mb-4">
                    {{ form_label(form.note, 'Votre note', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.note, {'attr': {'class': 'form-select form-select-lg'}}) }}
                    {{ form_errors(form.note) }}
                    <small class="form-text text-muted">
                        <i class="bi bi-info-circle"></i> Sélectionnez une note de 1 à 5 étoiles
                    </small>
                </div>
                
                <div class="mb-4">
                    {{ form_label(form.contenu, 'Votre avis', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.contenu) }}
                    {{ form_errors(form.contenu) }}
                    <small class="form-text text-muted">
                        <i class="bi bi-info-circle"></i> Partagez votre expérience avec ce livre
                    </small>
                </div>

                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> 
                    <strong>Note importante :</strong> Votre commentaire sera soumis à validation avant d'être publié sur le site.
                </div>
                
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-check-circle"></i> Publier mon avis
                    </button>
                    <a href="{{ path('app_catalogue_show', {id: livre.id}) }}" class="btn btn-secondary btn-lg">
                        <i class="bi bi-x-circle"></i> Annuler
                    </a>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
