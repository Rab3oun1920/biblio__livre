{% extends 'base.html.twig' %}

{% block title %}Mes Réclamations - BookCollection{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-chat-left-text"></i> Mes Réclamations</h2>
    <a href="{{ path('app_reclamation_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nouvelle réclamation
    </a>
</div>

{% if reclamations is empty %}
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Vous n'avez aucune réclamation.
        <a href="{{ path('app_reclamation_new') }}" class="alert-link">Créer une réclamation</a>
    </div>
{% else %}
    <div class="row">
        {% for reclamation in reclamations %}
            <div class="col-md-12 mb-3">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <strong>{{ reclamation.sujet }}</strong>
                        </div>
                        <div>
                            {% if reclamation.statut == 'en_attente' %}
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-clock"></i> En attente
                                </span>
                            {% elseif reclamation.statut == 'en_cours' %}
                                <span class="badge bg-info">
                                    <i class="bi bi-arrow-repeat"></i> En cours
                                </span>
                            {% elseif reclamation.statut == 'resolue' %}
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Résolue
                                </span>
                            {% elseif reclamation.statut == 'fermee' %}
                                <span class="badge bg-secondary">
                                    <i class="bi bi-x-circle"></i> Fermée
                                </span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-9">
                                <p class="mb-2">
                                    <i class="bi bi-calendar"></i> 
                                    <strong>Créée le :</strong> {{ reclamation.dateCreation|date('d/m/Y à H:i') }}
                                </p>
                                <p class="text-muted mb-0">
                                    {{ reclamation.message|length > 150 ? reclamation.message|slice(0, 150) ~ '...' : reclamation.message }}
                                </p>
                                
                                {% if reclamation.reponseAdmin %}
                                    <div class="alert alert-success mt-3 mb-0">
                                        <i class="bi bi-reply-fill"></i> 
                                        <strong>Réponse reçue le {{ reclamation.dateReponse|date('d/m/Y') }}</strong>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="col-md-3 text-end">
                                <a href="{{ path('app_reclamation_show', {id: reclamation.id}) }}" class="btn btn-primary">
                                    <i class="bi bi-eye"></i> Voir les détails
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}
