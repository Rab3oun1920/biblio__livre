{% extends 'base.html.twig' %}

{% block title %}Modifier la Réclamation - BookCollection{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3><i class="bi bi-pencil-square"></i> Modifier la Réclamation</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Modification de réclamation</strong><br>
                        Vous pouvez modifier votre réclamation tant qu'elle n'a pas encore été traitée par notre équipe.
                    </div>

                    {{ form_start(form) }}

                    <div class="mb-4">
                        {{ form_label(form.sujet, 'Sujet de la réclamation', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.sujet) }}
                        {{ form_errors(form.sujet) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.message, 'Description détaillée', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.message) }}
                        {{ form_errors(form.message) }}
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="bi bi-check-circle"></i> Enregistrer les modifications
                        </button>
                        <a href="{{ path('app_mes_reclamations') }}" class="btn btn-secondary btn-lg">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                        <form method="post" action="{{ path('app_reclamation_delete', {'id': reclamation.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réclamation ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Supprimer
                            </button>
                        </form>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
