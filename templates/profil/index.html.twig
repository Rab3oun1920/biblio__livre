{% extends 'base.html.twig' %}

{% block title %}Mon Profil - BookCollection{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-3 mb-4">
        {# Carte d'informations utilisateur #}
        <div class="card shadow">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="bi bi-person-circle display-1 text-primary"></i>
                </div>
                <h4>{{ app.user.prenom }} {{ app.user.nom }}</h4>
                <p class="text-muted mb-2">{{ app.user.email }}</p>
                {% if is_granted('ROLE_ADMIN') %}
                    <span class="badge bg-danger">Administrateur</span>
                {% else %}
                    <span class="badge bg-primary">Utilisateur</span>
                {% endif %}
            </div>
        </div>

        {# Statistiques #}
        <div class="card shadow mt-3">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Mes Statistiques</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span><i class="bi bi-box-seam"></i> Commandes</span>
                        <strong class="text-primary">{{ app.user.commandes|length }}</strong>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span><i class="bi bi-chat-dots"></i> Commentaires</span>
                        <strong class="text-primary">{{ app.user.commentaires|length }}</strong>
                    </div>
                </div>
                <div class="mb-0">
                    <div class="d-flex justify-content-between">
                        <span><i class="bi bi-chat-left-text"></i> Réclamations</span>
                        <strong class="text-primary">{{ app.user.reclamations|length }}</strong>
                    </div>
                </div>
            </div>
        </div>

        {# Liens rapides #}
        <div class="card shadow mt-3">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-link-45deg"></i> Liens rapides</h5>
            </div>
            <div class="list-group list-group-flush">
                <a href="{{ path('app_mes_commandes') }}" class="list-group-item list-group-item-action">
                    <i class="bi bi-box-seam"></i> Mes commandes
                </a>
                <a href="{{ path('app_mes_reclamations') }}" class="list-group-item list-group-item-action">
                    <i class="bi bi-chat-left-text"></i> Mes réclamations
                </a>
                <a href="{{ path('app_catalogue') }}" class="list-group-item list-group-item-action">
                    <i class="bi bi-grid-3x3-gap"></i> Catalogue
                </a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('admin_dashboard') }}" class="list-group-item list-group-item-action text-danger">
                        <i class="bi bi-speedometer2"></i> Administration
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="col-md-9">
        {# Formulaire de modification du profil #}
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0"><i class="bi bi-person-gear"></i> Modifier mon profil</h3>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.nom) }}
                        {{ form_errors(form.nom) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.prenom) }}
                        {{ form_errors(form.prenom) }}
                    </div>
                </div>
                
                <div class="mb-3">
                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>
                
                <div class="mb-3">
                    {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.telephone) }}
                    {{ form_errors(form.telephone) }}
                </div>
                
                <div class="mb-3">
                    {{ form_label(form.adresse, 'Adresse', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.adresse) }}
                    {{ form_errors(form.adresse) }}
                </div>

                <hr>

                {# Changement de mot de passe #}
                <h5 class="mb-3"><i class="bi bi-key"></i> Changer mon mot de passe</h5>
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> 
                    Laissez vide si vous ne souhaitez pas changer votre mot de passe
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.plainPassword.first, 'Nouveau mot de passe', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.plainPassword.first) }}
                        {{ form_errors(form.plainPassword.first) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.plainPassword.second, 'Confirmer le mot de passe', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.plainPassword.second) }}
                        {{ form_errors(form.plainPassword.second) }}
                    </div>
                </div>
                
                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-check-circle"></i> Enregistrer les modifications
                    </button>
                    <a href="{{ path('app_catalogue') }}" class="btn btn-secondary btn-lg">
                        <i class="bi bi-x-circle"></i> Annuler
                    </a>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>

        {# Activité récente #}
        <div class="card shadow mt-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Activité récente</h5>
            </div>
            <div class="card-body">
                {% if app.user.commandes|length > 0 %}
                    <h6 class="mb-3">Dernières commandes</h6>
                    <ul class="list-group mb-4">
                        {% for commande in app.user.commandes|slice(0, 3) %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="bi bi-box-seam"></i> 
                                    Commande #{{ commande.id }} - {{ commande.dateCommande|date('d/m/Y') }}
                                </div>
                                <span class="badge bg-primary">{{ commande.montantTotal }} TND</span>
                            </li>
                        {% endfor %}
                    </ul>
                    <a href="{{ path('app_mes_commandes') }}" class="btn btn-sm btn-outline-primary">
                        Voir toutes mes commandes <i class="bi bi-arrow-right"></i>
                    </a>
                {% else %}
                    <p class="text-muted mb-0">Aucune commande récente</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
